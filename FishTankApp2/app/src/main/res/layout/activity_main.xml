<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="135dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px"
            android:layout_marginTop="50px">

            <TextView
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/poppins_medium"
                android:inputType="textPersonName"
                android:paddingLeft="15px"
                android:text="Turbidity Status"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#1E1E1E"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/turbidityStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:inputType="textPersonName"
                android:textColor="#1E1E1E"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px">

            <TextView
                android:id="@+id/editTextTextPersonName7"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/poppins_medium"
                android:inputType="textPersonName"
                android:paddingLeft="15px"
                android:text="PH Value"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#1E1E1E"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/phValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:inputType="textPersonName"
                android:textColor="#1E1E1E"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="369dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px">

            <TextView
                android:id="@+id/editTextTextPersonName9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/poppins_medium"
                android:inputType="textPersonName"
                android:paddingLeft="15px"
                android:text="PH Status"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#1E1E1E"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/phStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/poppins_light"
                android:inputType="textPersonName"
                android:textColor="#1E1E1E"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Available Food"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#28282B"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circle"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/progress_bar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/needFeeding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:layout_marginTop="15px"
            android:layout_marginRight="15px"
            android:layout_marginBottom="15px"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#781F19"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#BF5858"
            android:fontFamily="@font/poppins_medium"
            android:text="Feed Now"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    </LinearLayout>

</LinearLayout>